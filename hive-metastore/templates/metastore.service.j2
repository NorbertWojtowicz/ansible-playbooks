[Unit]
Description=Hive Metastore Daemon
Requires=network.target
After=network.target

[Service]
Type=simple
PIDFILE=/var/run/metastore.PID
EnvironmentFile={{ rv_metastore_conf }}/metastore.env
User={{ rv_metastore_owner }}
Group={{ rv_metastore_owner }}
ExecStart={{ rv_metastore_home_latest }}/bin/start-metastore
Restart=on-failure

[Install]
WantedBy=default.target
