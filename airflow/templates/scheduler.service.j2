[Unit]
Description=Airflow scheduler daemon
After=network.target mysql.service
Wants=mysql.service

[Service]
EnvironmentFile={{ rv_airflow_config_dir }}/airflow.env
User={{ rv_airflow_owner }}
Group={{ rv_airflow_owner }}
Type=simple
ExecStart=airflow scheduler
Restart=always
RestartSec=10s

[Install]
WantedBy=multi-user.target
